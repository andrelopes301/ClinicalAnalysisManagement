@model LabTestesOnline.Models.CentroAnalise

@{
    ViewData["Title"] = "Centro de Análise";
}

<br>
<h1>Editar Centro de Análise</h1>
<hr style="border: 1px solid black;">
<br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localidade" class="control-label"></label>
                <input asp-for="Localidade" class="form-control" />
                <span asp-validation-for="Localidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumLimiteTestes" class="control-label">Nº Limite de Testes</label>
                <input asp-for="NumLimiteTestes" class="form-control" />
                <span asp-validation-for="NumLimiteTestes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioAbertura" class="control-label">Hora de Abertura</label>
                <input asp-for="HorarioAbertura" type="time" class="form-control" />
                <span asp-validation-for="HorarioAbertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioEncerramento" class="control-label">Hora de Encerramento</label>
                <input asp-for="HorarioEncerramento" type="time" class="form-control" />
                <span asp-validation-for="HorarioEncerramento" class="text-danger"></span>
            </div>
               @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                <label asp-for="GestorId" class="control-label">Gestor</label>
                 <select asp-for="GestorId" class="form-control" asp-items="ViewBag.GestorId"></select>
                <span asp-validation-for="GestorId" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
