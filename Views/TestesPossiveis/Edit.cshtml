@model LabTestesOnline.Models.TestesPossiveis

@{
    ViewData["Title"] = "Edit";
}

<br>
<h1>Editar Testes Possiveis</h1>
<hr style="border: 1px solid black;">
<br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoTeste">Tipo de Teste</label>
                <select asp-for="TipoTeste" asp-items= "ViewBag.TiposTestes" class="form-control" >
                </select>
                <span asp-validation-for="TipoTeste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroAnaliseId" class="control-label">Centro de Análise</label>
                <select asp-for="CentroAnaliseId" class="form-control" asp-items="ViewBag.CentroAnalise"></select>
                <span asp-validation-for="CentroAnaliseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

