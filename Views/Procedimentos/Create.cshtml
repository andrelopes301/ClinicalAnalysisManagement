@model LabTestesOnline.Models.Procedimento

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar Procedimento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="TipoProcedimento" class="control-label">Procedimento</label>
                <textarea asp-for="TipoProcedimento" class="form-control"  maxlength="250" style="resize: none;"> </textarea>
                <span asp-validation-for="TipoProcedimento" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="TestesPossiveisId" class="control-label">Tipo de Teste</label>
                <select asp-for="TestesPossiveisId" class ="form-control" asp-items="ViewBag.TestesPossiveis"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

